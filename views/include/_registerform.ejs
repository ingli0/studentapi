 <!-- form handling -->
 <form action="/api/register" method="POST" id="login">
    <div class="new_user">
        <div class="form-group">
            <label for="email" class="text-light">email</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="email" value="" placeholder="your@email.com">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="password" name="password" value="" placeholder="password">
        </div>
        <div class="form-group">
            <label for="Passwordcon" class="text-light">Confirm the password</label>
            <input type="password" name="Passwordcon" value="" placeholder="Passwordcon">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Register</button>
        </div>
        <div class="form-group">
            <a href="login"> 
            <button type="button" class="btn text-dark update">Log in</button>
            </a>
        </div>
    </div>
</form>

<script>
    function checkPasswords() {
        var password = document.getElementById("password").value;
        var passwordConfirm = document.getElementById("Passwordcon").value;

        if (password === passwordConfirm) {
            // Passwords match, you can proceed with form submission.
            document.getElementById("login").submit();
        } else {
            // Passwords do not match, display an error message or take appropriate action.
            alert("Passwords do not match. Please try again.");
        }
    }
</script>